{
  "name": "i-language-support",
  "displayName": "Imperative I language support",
  "description": "This is an extension for easier development in small test I language",
  "version": "1.0.0",
  "publisher": "manatee-ware",
  "engines": {
    "vscode": "^1.54.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/BlazZ1t/I-language-support.git"
  },
  "contributes": {
    "languages":[
      {
        "id": "i",
        "aliases": [
          "Imperative I",
          "I"
        ],
        "extensions": [
          ".impp"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "i",
        "scopeName": "source.i",
        "path": "./syntaxes/i.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "i",
        "path": "./snippets/i.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.54.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
